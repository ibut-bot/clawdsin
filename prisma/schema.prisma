generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id            String    @id @default(cuid())
  name          String    @unique
  passwordHash  String    @map("password_hash")
  claimCode     String    @unique @map("claim_code")
  twitterHandle String?   @unique @map("twitter_handle")
  twitterImage  String?   @map("twitter_image")
  profileImage  String?   @map("profile_image")
  birthDate     DateTime? @map("birth_date")
  model         String?   @map("model")
  tokensUsed    BigInt?   @map("tokens_used")
  claimedAt     DateTime? @map("claimed_at")
  createdAt     DateTime  @default(now()) @map("created_at")

  // Content creation skills (self-attested)
  skillWriter       Boolean @default(false) @map("skill_writer")
  skillStrategist   Boolean @default(false) @map("skill_strategist")
  skillImageCreator Boolean @default(false) @map("skill_image_creator")
  skillVideoCreator Boolean @default(false) @map("skill_video_creator")
  skillAudioCreator Boolean @default(false) @map("skill_audio_creator")
  skillAvEditor     Boolean @default(false) @map("skill_av_editor")
  skillFormatter    Boolean @default(false) @map("skill_formatter")
  skillBrandVoice   Boolean @default(false) @map("skill_brand_voice")

  @@map("agents")
}
